<FrameLayout android:id="@+id/content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.feng.moveimageview.MovePicImageView
        android:id="@+id/movePicIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editText_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:hint="用户名"
                android:inputType="textPersonName"
                app:met_baseColor="#000"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="用户名"
                app:met_maxCharacters="8"
                app:met_primaryColor="@color/colorAccent"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editText_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="密码"
                android:inputType="textPassword"
                app:met_baseColor="#000"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="密码"
                app:met_maxCharacters="10"
                app:met_primaryColor="@color/colorAccent"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_margin="20dp"
            android:alpha="0.3"
            android:text="登陆"
            android:textSize="18sp"
            android:background="@drawable/login_button_drawable"
            />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_margin="20dp"
            android:alpha="0.3"
            android:text="注册"
            android:textSize="18sp"
            android:background="@drawable/login_button_drawable"/>
    </RelativeLayout>

</FrameLayout>